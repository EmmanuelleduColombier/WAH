<div class="container mt-4">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
    <h2>Edit your booking</h2>

    <div id="booking-form" class="init-flat-pickr" data-dates="<%= @flat.bookings_dates %>">
      <%= simple_form_for @booking do |f| %>
        <%= f.input :start, as: :string, required: true, input_html: {class: "datepicker"} %>
        <%= f.input :end, as: :string, required: true, input_html: {class: "datepicker"} %>
        <%= f.input :comments, required: false %>
        <%= f.button :submit, "Go WAH", class: "btn-orange mt-2" %>
      <% end %>
    </div>
  </div>
</div>
