<div class="container mt-4">
  <div class="form-wrapper" style="width: 400px; margin: 10px auto;">
    <h2>Add a booking</h2>

    <div id="booking-form" class="init-flat-pickr" data-dates="<%= @flat.bookings_dates %>">
      <%= simple_form_for [@flat, @booking], remote: true do |f| %>
        <%= f.input :start, as: :string, required: true, input_html: {class: "datepicker"} %>
        <%= f.input :end, as: :string, required: true, input_html: {class: "datepicker"} %>
        <%= f.input :comments, required: false %>
        <%= f.button :submit, "Go WAH", class: "btn-orange my-2" %>
        <%= link_to "Back to flats", flats_path, class:"btn-orange-reverse" %>
      <% end %>
    </div>
  </div>
</div>
