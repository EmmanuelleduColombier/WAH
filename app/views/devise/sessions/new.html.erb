<div class="container mt-4">
  <div class="form-wrapper" style="width: 400px; margin: 10px auto;">

    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions mt-3 d-flex justify-content-end">
        <div>
          <%= f.button :submit, "Log in", class: "btn btn-orange mb-4" %>
        </div>
      </div>
    <% end %>

    <div class="mb-3">
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      <% end %>
    </div>

    <div class="linup pt-2">
      <%= link_to "Create your account", new_registration_path(resource_name) %>
    </div>

  </div>
</div>
<%#= render "devise/shared/links" %>
