<div class="container">
  <h1>All the places you may want to work at </h1>
  <div class="cards">
    <% @flats.each do |flat| %>
      <%= link_to flat_path(flat) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),">
          <p><%= flat.title %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
