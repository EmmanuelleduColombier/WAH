<%= render 'shared/banner' %>

<div class="container">
  <% if user_signed_in? %>
    <div class="d-flex p-2"><p>Log Out</p><%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-primary" %></div>
    <%= link_to "Find a place to work", flats_path, class:"btn btn-primary" %>
  <% else %>
    <div class="d-flex p-2"><p>Already have an account ?</p><%= link_to "Sign in", new_user_session_path, class: "btn btn-primary" %></div>
    <div class="d-flex p-2"><p>New on Work @ Home ?</p><%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary"%></div>
  <% end %>
</div>
