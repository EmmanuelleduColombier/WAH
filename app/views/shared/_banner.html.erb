<div class="banner d-flex align-items-center">
<div class="banner_opacity"></div>
  <div class="container">
    <h1>Work at Home</h1>
    <p>Rent your flat or your spare desk. Share a moment with another pro !</p>
    <p>(and eventually, find love and get married ❤️)</p>
    <div class="d-flex justify-content-center">
      <%= form_tag flats_path, class:"mt-5 searchbar inbanner", method: :get do %>
        <%= text_field_tag :query, params[:query], class: "form-control searchinput", placeholder: "Find a flat" %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
