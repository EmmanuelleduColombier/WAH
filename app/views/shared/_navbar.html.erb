<div class="navbar navbar-expand-sm navbar-light navbar-lewagon d-flex">

  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo_size_big.jpg" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="navbar-nav">
      <% if user_signed_in? %>
        <%= link_to "Dashboard", dashboard_bookings_path, class:"btn-orange-reverse" %>
        <div class="dropdown d-flex align-items-center">
          <button class="btn-dropdown-transparent dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= cl_image_tag current_user.photo.key, crop: :fill, gravity: :face, class: "avatar" %>
          </button>
          <div class="dropdown-menu  dropdown-menu-end" aria-labelledby="dropdownMenuButton">
            <%= link_to "Add a flat", new_flat_path, class: "dropdown-item" %>
            <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </div>
      <% else %>

          <%= link_to "Connexion", new_user_session_path, class: "btn-orange-reverse" %>

      <% end %>
    </div>
  </div>

</div>
